<div class="container">
    <div class="row">
        <div class="col-md-4 beer">
            <img class="beer-image-large" src={{image_url}} alt="beer-bottle">
        </div>
        <div class="col-md-8">
            <h4>{{name}}</h4>
            <h6 class="beer-tag-line">{{tagline}}</h6>
            <p>{{description}}</p>
            <h5>Food Pairing</h5>
            <ul>{{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p><strong>Brewers Tips: </strong>{{brewers_tips}}</p>
        </div>
    </div>
</div>